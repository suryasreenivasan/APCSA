package dum;
import java.util.*;
public class depths {
	public static void main(String[] args) {
		int n1 = 0, n2 = 0 , answer = 0, score = 0, total = 0;
		Random random = new Random();
		boolean tutor = true;
		Scanner scanner = new Scanner(System.in);
		while (tutor) {
			System.out.println("\n          Main Menu ");
			System.out.println("----------------------------------");
			System.out.println("1: Addition \n2: Subtraction \n3: Multiplication \n4: Division\n5: Exit");
			System.out.print("Enter your choice: ");
			try {
			int pick = scanner.nextInt();
			switch (pick) {
			case 1: {
				total++;
				n1 = random.nextInt(10);
				n2 = random.nextInt(10);
				System.out.print("What is " + n1 + " + " + n2 + " = ");
				answer = scanner.nextInt();
				if (answer == (n1 + n2)) {
					System.out.println("Correct.");
					score++;
				}
				else {
					System.out.println("Incorrect. " + n1 + " + " + n2 + " = " + (n1+n2));
				}
				scanner.nextLine();
			} break;
			case 2: {
				total++;
				n1 = random.nextInt(10);
				n2 = random.nextInt(10);
				if (n2 > n1) {
					int temp = n1;
					n1 = n2;
					n2 = temp;
				}
				System.out.print("What is " + n1 + " -  " + n2 + " = ");
				answer = scanner.nextInt();
				if (answer == (n1-n2)) {
					System.out.println("Correct.");
					score++;
				}
				else {
					System.out.println("Incorrect. " + n1 + " - " + n2 + " = " + (n1-n2));
				}
				scanner.nextLine();
			} break;
			case 3: {
				total++;
				n1 = random.nextInt(10);
				n2 = random.nextInt(10);
				System.out.print("What is " + n1 + " * " + n2 + " = ");
				answer = scanner.nextInt();
				if (answer == (n1*n2)) {
					System.out.println("Correct.");
					score++;
				}
				else {
					System.out.println("Incorrect. " + n1 + " * " + n2 + " = " + (n1*n2));
				}
				scanner.nextLine();
			} break;
			case 4: {
				total++;
				n1 = random.nextInt(9) + 1;
				n2 = random.nextInt(9) + 1;
				// redundant but it says in rubric i need a while loop
				while (n2 == 0) {
					n2 = random.nextInt(9) + 1;
				}
				System.out.print("What is " + n1 + " / " + n2 + " = " );
				answer = scanner.nextInt();
				if (answer == (n1 / n2)) {
					System.out.println("Correct.");
					score++;
				}
				else {
					System.out.println("Incorrect. " + n1 + " / " + n2 + " = " + (n1/n2));
				}
				scanner.nextLine();
			} break;
			case 5: {
				System.out.println("Goodbye. Thanks for using Math Tutor!");
				if (total == 0) {
					System.out.println("No questions were answered");
				}
				else {
				System.out.println("You scored a " + score + " out of " + total);
				}
				System.out.println("-------------------------------------------------------");
				tutor = false;
			} break;
			default: System.out.println("Invalid Input."); break;
			}
			} 
			catch (Exception e) {
				System.out.println("error!!");
			}
		}
			
		scanner.close();
	
	}
}
