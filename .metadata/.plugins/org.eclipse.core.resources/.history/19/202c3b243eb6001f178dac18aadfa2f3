
public class Circle {
	
	double radius = 1.0;
	String color;
	
	Circle() {
		
	}
	
	Circle (double r) {
		radius = r;
	}
	Circle (double r, String c) {
		radius = r;
		color = c;
	}
	
	public double getRadius() {
		return radius;
	}
	
	String getColor() {
		return color;
	}
	
	void setRadius(double r) {
		radius = r;
	}
	
	double getArea() {
		return radius * radius * Math.PI;
	}
	
	double getPerimeter() {
		return 2 * Math.PI * radius;
	}
	public String toString() {
		return "This circle's radius: " + radius + " color: " + color;
	}
	
	
}
