
public class PrimeNumbers {

	public static void main(String[] args) {
		final int NUM_OF_PRIME = 50;
		int count = 0;
		int prime = 2;
		boolean isPrime;
		System.out.println("           First Fifty Prime Numbers \n-------------------------------------------------");
		while (count < NUM_OF_PRIME) {
			isPrime = true;
			for (int x = 2; x <= (prime / 2); x++) {
				if ((prime % x) == 0 ) {
						isPrime = false;
						break;
				}
			
			}
			if (isPrime) {
				count++; 
				if ((count % 10) == 0) {
					System.out.printf("%4d\n", prime);
				}
				else {
					System.out.printf("%4d ", prime);
				}
			}
			prime++;
			
		}
		
	}

}
