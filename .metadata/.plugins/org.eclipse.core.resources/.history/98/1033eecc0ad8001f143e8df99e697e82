import java.util.*;
public class ArrayLists {

	public static void main(String[] args) {
		ArrayList<Integer> list = new ArrayList<>();
		list.add(1);
		list.add(2);
		list.add(1);
		list.add(1);
		System.out.println(list);
		for (int i = 0; i < list.size(); i++) {
			if(list.get(i) == 1) {
				list.remove(i);
				i = 0;
			}
		}
		System.out.println(list);

	}

}
