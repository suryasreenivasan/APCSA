import java.util.*;
public class Poker {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.println("play five cards!");
		FiveCards fivecards = new FiveCards();
		char chr = ' ';
		System.out.println("Scores for one-pair:   1 ");
		System.out.println("\t   two-pair:       2");
		System.out.println("\t   triple:         3");
		System.out.println("\t   straight:       4");
		System.out.println("\t   flush:          5");
		System.out.println("\t   full house:     6");
		System.out.println("\t   four of a kind: 7");
		System.out.println("\t   straigh flush:  8");
		
		outerLoop:
		while (true) {
			
			System.out.println("---------------------------");
			System.out.println("\tmain menu");
			System.out.println("---------------------------");
			System.out.println("d: display current cards");
			System.out.println("n: new set of five cards");
			System.out.println("c: change one card");
			System.out.println("h: display history");
			System.out.println("q: quit");
			System.out.print("enter d, n, c, h, or q: ");
			try {
				chr = scanner.nextLine().charAt(0);
			}
			catch(Exception e) {
				System.err.println("please enter a single charachter");
				continue;
			}
			
			
			switch (chr) {
			case 'd': {
				System.out.println(fivecards);
			} break;
			
			case 'n': {
				fivecards = new FiveCards();
			} break;
			case 'c': {
				System.out.println("which position? (1-5)");
				int x;
				try {
				x = scanner.nextInt();
				scanner.nextLine();
				} 
				catch (Exception e) {
					System.err.println("stop fooling around");
					continue outerLoop;
				}
				fivecards.changeOne(x);
				System.out.println(fivecards);
			} break;
			case 'h': {
				System.out.println("history: ");
				System.out.println(fivecards.getHistory());
			} continue outerLoop;
			case 'q': {
				System.out.println("thanks for playing!");
				break outerLoop;
			}
			
			default: {
				System.err.println("that is not a valid charachter");
			} break;
			
			}
			
			System.out.println("score: " + fivecards.getScore());
		}
		scanner.close();
	}

}
