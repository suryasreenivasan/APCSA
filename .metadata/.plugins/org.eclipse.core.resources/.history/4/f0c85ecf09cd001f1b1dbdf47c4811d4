import java.util.Arrays;

public class Course {
	
	private String courseName;
	private String[] students = new String[2];
	private int numOfStudents;
	
	public Course(String courseName) {
		this.courseName = courseName;
	}
	
	public String getCourseName() {
		return courseName;
	}
	
	public void addStudent(String student) {
		if (numOfStudents == students.length) {
			String[] temp = new String[students.length * 2];
			for (int i = 0; i < students.length; i++) {
				temp[i] = students[i];
			}
			students = temp;
		}
		students[numOfStudents++] = student;
	}
	
	public void dropStudent(String student) {
		for (int i = 0; i < students.length; i++) {
			if (students[i].equals(student)) {
				for (int j = i + 1; j < students.length; j++) {
					students[j - 1] = students[j];
				}
				numOfStudents--;
				break;
			}
		}
	}
	
	public String[] getStudents() {
		return students;
	}
	
	public int getNumberOfStudents() {
		return numOfStudents;
	}
	
	public void clear() {
		for (int i = 0; i < students.length; i++) {
			students[i] = null;
		}
		numOfStudents = 0;
	}
	
	public String toString() {
		return courseName;
		
	}
	
	public static void main(String[] args) {
		
		Course cse101 = new Course("Introduction to Computer Science");
		Course cse102 = new Course("Introduction to Java");
		Course mat101 = new Course("Calculus 1");
		Course[] courses = {cse101, cse102, mat101};
		cse101.addStudent("omar");
		cse101.addStudent("eddie");
		cse101.addStudent("sachin");
		cse101.addStudent("bhuvan");
		mat101.addStudent("bhavin");
		mat101.addStudent("aarav");
		displayCourse(courses);
		cse101.dropStudent("omar");
		mat101.dropStudent("aarav");
		cse102.addStudent("omar");
		cse102.addStudent("aarav");
		displayCourse(courses);
	}
	
	public static void displayCourse(Course[] course) {
		for (Course c: course) {
			System.out.println(c + ":");
			System.out.println();
			for (String s: c.getStudents()) {
				if (s == null) {
					if (s == c.getStudents()[1]) {
						System.out.println("no students");
					}
					break;
				}
				System.out.println(s);
			}
			System.out.println();
			System.out.println("Number of students registered: " + c.getNumberOfStudents() + "\n");
		}
	}
	
}
