
public class DisplayLeapYears {

	public static void main(String[] args) {
		int count = 0;
		int line = 0;
		String stringy = "";
		for (int year = 101; year <= 2100; year++) {
			if ((year % 4 == 0) && (year % 100 != 0) || year % 400 == 0) {
				System.out.printf("%5d" + year + " ");
				line++;
				if (line % 10 == 0) {
					System.out.println();
				}
				count++;
			
			}
		}
			System.out.println(stringy);
			System.out.println("number of leap years between 101 and 2100: " + count );
	}

}
