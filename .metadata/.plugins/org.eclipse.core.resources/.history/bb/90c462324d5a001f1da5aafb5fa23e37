import java.util.Scanner;

public class Practice2 {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in); 
        // Create a Scanner object

        while (true) {
            System.out.println("Enter the radius of a circle (or type 'stop' to quit):");

            if (scanner.hasNextDouble()) {  // Check if the input is a valid number
                double radius = scanner.nextDouble();  // Read the user input

                double area = radius * radius * 3.14159265;  // Calculate the area

                System.out.println("Area of circle with radius " + radius + " is " + Math.round(area));
            } else {
                String input = scanner.next();  // Read the input
                if (input.equalsIgnoreCase("stop")) {  // Check if the user wants to exit
                    break;  //  the loop
                } else {
                    System.out.println("Invalid input. Please enter a number or type 'exit' to quit.");
                }
            }
        }

        scanner.close();  // Close the scanner
        System.out.println("Program terminated.");
    }
}