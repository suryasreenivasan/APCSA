import java.util.*;

public class TwoDArray {

	public static void main(String[] args) {
		int[][] m = random2dArray(5,10);
		System.out.println(m);
		print2dArr(m);
		System.out.println(sum2DArr1(m));
		sum2DArrByColumn(m);
		
		
	}
	public static int[][] inputArr(int row, int col){
		int[][] result = new int[row][col];
		Scanner scanner = new Scanner(System.in);
		System.out.println("enter " + row + " rows of " + col +  " integers: ");
		for (int r = 0; r < row; r++) {
			for (int c = 0; c < col; c++) {
				result[r][c] = scanner.nextInt();
			}
		}
		scanner.close();
		return result;
	}
	
	public static void print2dArr(int[][] m) {
		for (int r = 0; r < m.length; r++) {
			for (int c = 0; c < m[r].length; c++) {
				System.out.print(m[r][c] + " ");
			}
			System.out.println();
		}
		System.out.println();
	}
	
	public static void print2dArr1(int[][] m) {
		for (int[] a: m) {
			for(int e: a) {
				System.out.print(e + " ");
			}
			System.out.println();
		}
	}
	
	public static int[][] random2dArray(int row, int column) {
		int[][] result = new int[row][column];
		Random random = new Random();
		for (int i = 0; i < result.length; i++) {
			for (int j = 0;  j < result[i].length; j++) {
				result[i][j] = random.nextInt(99) + 1; 
			}
		}
		return result;
	}
	
	public static int sum2DArr1(int[][] m) {
		int sum = 0;
		for (int r = 0; r < m.length; r++) {
			for (int c = 0; c < m[r].length; c++) {
				sum += m[r][c];
			}
		}
		return sum;
	}
	
	public static void sum2DArrByColumn(int[][] m) {
		int sum = 0;
		for (int c = 0; c < m[0].length; c++) {
			for (int r = 0; r < m.length; r++) {
				sum += m[c][r];
			}
		}
		
		
		System.out.print("the sum of array "); print2dArr(m); System.out.println(" is " + sum);
	}
	
	public static int sum2DArr2(int[][] m) {
		int sum = 0;
		for (int[] a: m) {
			for (int e: a) {
				sum += e;
			}
		}
		return sum;
	}

}
