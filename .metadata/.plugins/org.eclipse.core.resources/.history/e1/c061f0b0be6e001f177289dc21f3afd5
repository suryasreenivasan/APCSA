import java.util.*;
public class rockPaperSciccors {

	public static void main(String[] args) {
		System.out.print("Rock(0), Paper(1), Scissors(2): ");
		Scanner scanner = new Scanner(System.in);
		int user = scanner.nextInt();
		scanner.close();
		int computer = (int)(Math.random()*3);

		
		if (user == computer) {
			if (computer == 0) {
			System.out.print("You: Rock --- Computer: Rock. Draw.");
			}
			else if (computer == 1) {
				System.out.println("You: Paper --- Computer: Paper. Draw.");
			}
			else {
				System.out.println("You: Scissors --- Computer: Scissors. Draw.");
			}
		}
		if (computer > user) {
			if (computer > ++user) {
				System.out.println("You: Rock --- Computer: Scissors. You win.");
			}
			else {
				System.out.println("You: Paper --- Computer: Scissors. You lose.");
			}
		}
		if (user > computer) {
			if (user > ++computer) {
				System.out.println("You: Scissors --- Computer: Rock. You lose.");
			}
			else {
				System.out.println("You: Scissors --- Computer: Paper. You lose.");
			}
		}
	}

}
