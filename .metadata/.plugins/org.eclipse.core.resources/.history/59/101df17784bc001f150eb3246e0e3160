// january the fifth
public class Rational {
	
	private int numerator = 0;
	private int denominator = 1;
	
	public Rational() {
		
	}
	
	public Rational(int n, int d) {
		if (d == 0) {
			System.out.println("denominator cannot be zero");
			System.exit(d);
		}
		numerator = n;
		denominator = d;
	}
	public int getNumerator() {
		return numerator;
	}
	
	public int getDenominator() {
		
		return denominator;
		
	}
	
	public void setNumerator(int n) {
		
		numerator = n;
		
	}
	
	public void setDenominator(int d) {
		if (d == 0) {
			System.out.println("denominator cannot be zero");
			System.exit(d);
		}
		denominator = d;
	}
	
	private static int getGCD(int n, int d) {
		int absn = Math.abs(n);
		int absd = Math.abs(d);
		if (d == 0) {
			return absn;
		}
		
		int gcd = 1;
		return gcd;
	}
	
	private static String reduce(int n, int d) {
		int gcd = getGCD(n, d);
		n /= gcd;
		d /= gcd;
		return n + "/" + d;
	}
	
	
}