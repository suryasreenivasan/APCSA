 * Lab 3.7 Point in a Rectangle
 */

// -5, -1 
// -6, 0
// 4 sample runs 
import java.util.*;
public class Lab03_7 {

	public static void main(String[] args) {
		System.out.print("Sample 1: \nEnter x and y for a point location: ");
		Scanner input = new Scanner(System.in);
		double x1 = input.nextDouble();
		double y1 = input.nextDouble();
		double dx1 = Math.abs(x1);
		double dy1 = Math.abs(y1);
		double halfWidth = 10.0 / 2;
		double halfHeight = 5.0 / 2;
		if (dx1 <= halfWidth && dy1 <= halfHeight ) {
			System.out.print("Point (" + x1 + ", " + y1 + ") is inside of the rectangle\n");
		}
		
		
		System.out.print("Sample 2: \nEnter x and y for a point location: ");
		double x2 = input.nextDouble();
		double y2 = input.nextDouble();
		input.close();
		double dx2 = Math.abs(x2);
		double dy2 = Math.abs(y2);
		if (dx2 <= halfWidth && dy2 <= halfHeight ) {
			System.out.print("Point (" + x2 + ", " + y2 + ") is inside of the rectangle");
		}

	}

}
