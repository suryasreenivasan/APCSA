// Play against the computer

import java.util.*;

public class VsComPuter {
    public static Scanner scanner = new Scanner(System.in);
    
    public static void main(String[] args) {
        System.out.println("Play Tic-Tac-Toe!");
        deLay(1000);
        char[][] board = new char[3][3];
        for (int i = 0; i < board.length; i++) {
            for (int j = 0; j < board[i].length; j++) {
                board[i][j] = ' ';
            }
        }
        boolean won = false;
        int turn = 0;
        char[] players = new char[2];
        if (Math.random() > 0.5) {
            players[0] = 'X';
            players[1] = 'O';
        } else {
            players[0] = 'O';
            players[1] = 'X';
        }
        System.out.println("player human is " + players[0]);
        System.out.println("player Robot is " + players[1]);
        deLay(3000);

        while (!won) {
            displayBoard(board);
            char player = players[turn % 2];
            if (turn % 2 == 1) {
                robotMove(board, player);
            } else {
                makeMove(board, player);
            }

            if (win(board, player)) {
                displayBoard(board);
                System.out.println("Player " + player + " wins!");
                break;
            }
            draw(board);
            turn++;
        }
    }

    public static void displayBoard(char[][] board) {
        for (int i = 0; i < board.length; i++) {
            System.out.print("\n-------------\n");
            System.out.print("|");
            for (int j = 0; j < board[i].length; j++) {
                System.out.print(" " + board[i][j] + " |");
            }
        }
        System.out.print("\n-------------\n");
    }

    public static void makeMove(char[][] board, char player) {
        boolean validMove = true;
        while (validMove) {
            System.out.println();
            System.out.println("Player " + player + "'s move");
            System.out.print("Enter row: ");
            int row = scanner.nextInt();
            System.out.println();
            System.out.print("Enter column: ");
            int column = scanner.nextInt();

            if (row > 3 || column > 3 || row < 1 || column < 1) {
                System.out.println("Invalid row/column, please enter a value between 1-3.");
                displayBoard(board);
                continue;
            }

            if (board[row - 1][column - 1] != ' ') {
                System.out.println("Cell is already occupied");
                displayBoard(board);
                continue;
            }

            board[row - 1][column - 1] = player;
            validMove = false;
        }
    }

    public static void robotMove(char[][] board, char player) {
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                if (board[i][j] == ' ') {
                    board[i][j] = player;
                    if (win(board, player)) {
                        board[i][j] = ' '; // Reset the board for evaluation
                        System.out.println("Robot moves to (" + (i + 1) + "," + (j + 1) + ")");
                        return;
                    }
                    board[i][j] = ' '; // Reset the board for evaluation
                }
            }
        }

        // Check for blocking opponent's win
        char opponent = (player == 'X') ? 'O' : 'X';
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                if (board[i][j] == ' ') {
                    board[i][j] = opponent;
                    if (win(board, opponent)) {
                        board[i][j] = ' '; // Reset the board for evaluation
                        board[i][j] = player; // Place robot's mark
                        System.out.println("Robot moves to block (" + (i + 1) + "," + (j + 1) + ")");
                        return;
                    }
                    board[i][j] = ' '; // Reset the board for evaluation
                }
            }
        }

        // Implement a simple strategy if no immediate win or block
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                if (board[i][j] == ' ') {
                    board[i][j] = player;
                    System.out.println("Robot moves strategically (" + (i + 1) + "," + (j + 1) + ")");
                    return;
                }
            }
        }
    }

    public static boolean win(char[][] board, char player) {
        for (int i = 0; i < board.length; i++) {
            if ((board[i][0] == player && board[i][1] == player && board[i][2] == player) ||
                (board[0][i] == player && board[1][i] == player && board[2][i] == player)) {
                return true;
            }
        }

        if ((board[0][0] == player && board[1][1] == player && board[2][2] == player) ||
            (board[0][2] == player && board[1][1] == player && board[2][0] == player)) {
            return true;
        }

        return false;
    }

    public static void draw(char[][] board) {
        for (int i = 0; i < board.length; i++) {
            for (int j = 0; j < board[i].length; j++) {
                if (board[i][j] == ' ') {
                    return;
                }
            }
        }
        System.out.println();
        System.out.println("Draw");
        System.exit(0);
    }

    public static void deLay(int t) {
        double startTime = System.currentTimeMillis();
        while (System.currentTimeMillis() - startTime < t) {
        }
    }
}
