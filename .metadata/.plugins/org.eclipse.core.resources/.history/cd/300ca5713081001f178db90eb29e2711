import java.util.*;
public class Unit05Project {

	public static void main(String[] args) {
	
		int x = 0;
		int y = 0;
		int answer = 0;
		while (1 ==1 ) {
			Scanner input = new Scanner(System.in);
			System.out.println("Main Menu");
			System.out.println("1: Addition");
			System.out.println("2: Subtraction");
			System.out.println("3: Multiplication");
			System.out.println("4: Division");
			System.out.println("5: Exit");
			System.out.println("Enter a choice: ");
			int choice = input.nextInt();
			
			if(choice == 1) {
				x =(int) (Math.random()*10);
				y = (int) (Math.random()*10);
				System.out.println("What is "+x+" + "+y+" =: ");
				answer = input.nextInt();
				if (answer != x+y) {
					System.out.println("Not correct!"+x+" + "+y+" = "+(x+y));
				}
				else {
					System.out.println("Correct!");
				}
		}
			if(choice == 3) {
				x =(int) (Math.random()*10);
				y = (int) (Math.random()*10);
				System.out.println("What is "+x+" X "+y+" =: ");
				answer = input.nextInt();
				if (answer != x*y) {
					System.out.println("Not correct!"+x+" X "+y+" = "+(x*y));
				}
				else {
					System.out.println("Correct!");
				}
		}
			if(choice == 2) {
				x =(int) (Math.random()*10);
				y = (int) (Math.random()*10);
				if (x<y) {
					int temp = x;
					x = y;
					y = temp;
				}
				System.out.println("What is "+x+" - "+y+" =: ");
				answer = input.nextInt();
				if (answer != x-y) {
					System.out.println("Not correct!"+x+" - "+y+" = "+(x-y));
				}
				else {
					System.out.println("Correct!");
				}
		}
			if(choice == 4) {
				x =(int) (Math.random()*10);
				y = (int) (Math.random()*10);
				if (y == 0) {
					y = (int)(Math.random()*8)+1;
				}
				System.out.println("What is "+x+" / "+y+" =: ");
				answer = input.nextInt();
				if (answer != x/y) {
					System.out.println("Not correct!"+x+" / "+y+" = "+(x/y));
				}
				else {
					System.out.println("Correct!");
				}
		}
			
			if(choice == 5) {
				System.out.println("Goodbye. Thanks for using Math Tutor!");
				System.exit(choice);
			}
			else {
				System.out.println("Try again or choose the right number");
			}
		
		input.close();
		}

	}
}