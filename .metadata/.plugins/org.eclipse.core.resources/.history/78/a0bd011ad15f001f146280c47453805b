 * Lab 2.1 FInd the number of years
 */
import java.util.*;
public class Lab02_2 {

	public static void main(String[] args) {
		// 1000000000
		
		System.out.print("Entre minutes: ");
		Scanner input = new Scanner(System.in);
		int minutes = input.nextInt();
		input.close();
		
		int hours = minutes / 60;
		int days = hours / 24;
		int years = days / 365;
		int remainingdays = days % 365;
		
		System.out.println(minutes + " minutes is " + years + " and " + remainingdays + " days");

	}

}
