import java.util.*;
public class areaOfRegularPolygon {
// 5 6.5
	public static void main(String[] args) {
		System.out.print("Enter number of sides of regular polygon: ");
		Scanner scanner = new Scanner(System.in);
		int sideNumber = scanner.nextInt();
		System.out.print("Enter length of a side: ");
		double length = scanner.nextDouble();
		scanner.close();
		double area = (sideNumber * length * length) / (4 * Math.tan(Math.PI / sideNumber));
		System.out.println("Area of a " + sideNumber + "-side polygon: " + area);
	}

}
