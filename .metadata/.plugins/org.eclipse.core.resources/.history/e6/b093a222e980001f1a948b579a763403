	*/	
		scanner.close();
		int decimal = 0;
		int power = 0;
		for (int i = binaryStr.length() - 1; i >= 0; i--) {
			if (binaryStr.substring(i, i+1).equals("1")) {
				decimal += (int)(Math.pow(2, power));
				power++;
			}
			else if (binaryStr.substring(i, i+1).equals("0")) {
				decimal += 0;
			}
			
			else {
				System.exit(0);
			}
		}
		System.out.println("Decimal Value: " + decimal);
		
	}

}
