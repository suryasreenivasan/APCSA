import java.util.*;
// write a method that checks whether a string is a valid password. supposed the password rules are as follows
// a password must have at least 8 characters
// a password consists of only letters and digits, but not special characters 
// a password must contain at least 2 digits
// sample run 1 - qwerty1, run 2- 123Qwerty
public class SecurePassword {
	
	public static void main(String[] args) {
		System.out.print("enter a password: ");
		Scanner scanner = new Scanner(System.in);
		String string = scanner.nextLine();
		scanner.close();
		if (isValid(string)) {
			System.out.println(string + " is a valid password");
		}
		else {
			System.out.println(string + " is not a valid password");
		}
		
	}
	
	public static boolean isValid(String s) {
		if (s.length() < 8) {
			return false;
		}
		int countDigit = 0;
		for (int i = 0; i < s.length(); i++) {
			String temp = s.substring(i, i+1);
			if ((temp.compareTo("0") < 0 || temp.compareTo("9") > 0 && temp.compareTo("A") < 0) || (temp.compareTo("Z") > 0 || temp.compareTo("a") < 0 || temp.compareTo("z") > 0)) 
				return false;
		
			if (temp.compareTo("0") >= 0 && temp.compareTo("9") <= 0) countDigit++;
		}
		if (countDigit < 2) return false;
		return true;
		
	
	}
}
