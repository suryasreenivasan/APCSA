import java.util.*;

public class Lab2 {

	public static void main(String[] args) {
	double[] array = new double[100];
	Random random = new Random();
	for (int i = 0; i < array.length; i++) {
		array[i] = random.nextDouble(99) + 1;
	}
	System.out.printf("%.2D", Arrays.toString(array));
	System.out.println("the maximum of the array is: " + maximum(array));
	System.out.println("the minimum of this array is: " + minimum(array));
	System.out.println("the mean of this array is " + mean(array));
	System.out.println("the standard deviation of this array is " + standardDeviation(array));
		
		
	}
	
	public static double maximum(double[] x) {
		Arrays.sort(x);
		return x[x.length - 1];
	}
	
	public static double minimum(double[] x) {
		Arrays.sort(x);
		return x[0];
	}
	public static double mean(double [] x) {
		double sum = 0;
		for (int i = 0; i < x.length; i++) {
			sum += x[i];
		}
		return sum / x.length;
	}
	public static double standardDeviation(double[] x) {
		double sum = 0;
		double mean = mean(x);
		for (int i = 0; i < x.length; i++) {
			sum += Math.pow((x[i] - mean), 2);
		}
		return Math.sqrt(sum / (x.length - 1));
	}

}
