 * Lab 2.4 Cost of Driving
 */
import java.util.*;
public class Lab02_4 {

	public static void main(String[] args) {
		
		System.out.print("Enter the distance in miles: "); 
		Scanner input = new Scanner(System.in);
		double distance = input.nextDouble();
		System.out.print("Enter the fuel efficieny (mpg): ");
		double mpg = input.nextDouble();
		System.out.print("Enter the gas price per gallon: $");
		double gasprice = input.nextDouble();
		double cost = gasprice * distance / mpg;
		System.out.println("Cost of driving: " + cost);
		
	}

}
