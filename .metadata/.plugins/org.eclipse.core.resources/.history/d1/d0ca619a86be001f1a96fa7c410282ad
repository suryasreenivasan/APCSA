import javax.sound.sampled.*;
import java.io.*;

public class MooSic {
    public static void main(String[] args) {
        String filePath = "C:\\Users\\Surya\\Downloads\\Java.wav";
        System.out.println("to jingle bell rock\n\n\n\n");
        delay(1500);
        System.out.println("     J      A     V       V      A                  CCCCC   OOOOO  DDDDD   EEEEE");
        System.out.println("     J     A A     V     V      A A                C       O     O D    D  E    ");
        System.out.println("     J    A   A     V   V      A   A              C        O     O D     D EEEEE");
        System.out.println(" J   J   AAAAAAA     V  V     AAAAAAA              C       O     O D    D  E    ");
        System.out.println("  JJJ   A       A     VV     A       A              CCCCC   OOOOO  DDDDD   EEEEE");

        try {
            File musicFile = new File(filePath);
            AudioInputStream audioStream = AudioSystem.getAudioInputStream(musicFile);
            Clip clip = AudioSystem.getClip();
            clip.open(audioStream);
            clip.start();
            displayLyrics();
        } catch (Exception e) {
            System.err.println("Error playing audio: " + e.getMessage());
        }
    }

    public static void displayLyrics() {
    	delay(3500);
        typewriterPrint("\n\n\njava code, java code, compile and run", 1000);
        typewriterPrint("syntax is sharp, and coding is fun", 4000);
        typewriterPrint("loops and conditions, the methods are tight", 4000);
        typewriterPrint("debugging through the code all night", 3400);
        System.out.println();
        typewriterPrint("java class, java stack, objects in play", 3700);
        typewriterPrint("polymorphism leads the way", 3800);
        typewriterPrint("inheritance flows, the program will grow", 3600);
        typewriterPrint("oh coding in java's the way to go", 3600);
        System.out.println();
        typewriterPrint("oh java code, java flow", 3600);
        typewriterPrint("threads are spinning, watch them flow", 1800);
        typewriterPrint("exceptions to throw, apis to know", 2000);
        typewriterPrint("writing good code is the way to show", 4000);
        System.out.println();
        delay(2000);
        typewriterPrint("from the jvm to the bytecode dance", 6200);
        typewriterPrint("compile it once and take a chance", 4500);
        typewriterPrint("portable power, the world to explore", 4000);
        typewriterPrint("java's the language we all adore", 4000);
        System.out.println();
        typewriterPrint("oh java class, java stack", 3500);
        typewriterPrint("encapsulation has your back", 1800);
        typewriterPrint("design pattern rocks, with every new block", 1900);
        typewriterPrint("java code we're on the clock", 3000);
        System.exit(0);
    }

    public static void typewriterPrint(String text, int duration) {
        int delay = duration / text.length();
        for (char ch : text.toCharArray()) {
            System.out.print(ch);
            try {
                Thread.sleep(delay);
            } catch (InterruptedException e) {
                Thread.currentThread().interrupt();
                System.err.println("Typewriter effect interrupted");
                break;
            }
        }
        System.out.println();
    }

    public static void delay(int t) {
        double startTime = System.currentTimeMillis();
        while (System.currentTimeMillis() - startTime < t) {
        }
    }
}
