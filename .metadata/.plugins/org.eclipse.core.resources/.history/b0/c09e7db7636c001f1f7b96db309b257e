 */

// -5, -1 
// -6, 0
// 4 sample runs 
import java.util.*;
public class Lab03_7 {

	public static void main(String[] args) {
		System.out.print("Sample 1: \nEnter x and y for a point location: ");
		Scanner input = new Scanner(System.in);
		double x1 = input.nextDouble();
		double y1 = input.nextDouble();
		double dx1 = Math.abs(x1);
		double dy1 = Math.abs(y1);
		double halfWidth = 10.0 / 2;
		double halfHeight = 5.0 / 2;
		if (dx1 <= halfWidth && dy1 <= halfHeight ) {
			System.out.print("Point (" + x1 + ", " + y1 + ") is inside of the rectangle\n");
		}
		else {
			System.out.print("Point (" + x1 + ", " + y1 + ") is outside of the rectangle\n");
		}
		


	}

}
